

<header class="navbar navbar-fixed-top navbar-inverse">
        <%= link_to image_tag('swampCreature.png', size: '50x50'), '/', id: "logo"%>
        <div class="navbar-right">
        <%= form_tag(creatures_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Creatures" %>
        <%= submit_tag "Search", :name => nil %>
        </div>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "new creature",   new_creature_path %></li>
            <li><%= link_to "random creature", creature_path(0)%></li>
          </ul>
        
    </header>

   
<br>

<div class = "container">
<br>
<br>
<% @creatures.each do |creature| %></li>
<h2 class= "row" center><%=creature.name%></h2>
<div class = "row">
<div class="col-xs-4">
<%= link_to image_tag(creature.url_link, size: '250x200') , creature_path(creature) %>
</div>
    <p class= "col-xs-8">
      <strong>Description:</strong> <%= creature.description %>
    </p>
 </div>
 <% end %>
  <% end %>
  </div>